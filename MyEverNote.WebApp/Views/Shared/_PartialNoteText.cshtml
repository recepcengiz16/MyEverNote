@using MyEverNote.Entities
@model Note

<div class="row">
    <div class="col-md-12">
        <h3 class="text-center">@Model.Title</h3>
    </div>
    <div class="col-md-12">
        <hr />
    </div>
    <div class="col-md-12 text-right">
        @Model.Owner.UserName <i class="fas fa-user"></i> <br />
         @Model.ModifiedOn <i class="fas fa-clock"></i>
    </div>
    <div class="col-md-12">
        <hr />
    </div>
    <div class="col-md-12">
        <p class="text-justify">
            @Model.Text
        </p>
    </div>
</div>
