@using MyEverNote.Entities
@model EverNoteUser

@{
    ViewBag.Title = "Profili Düzenle";
}


<div class="container">
    <div class="row p-5">
        <div class="col-md-10 offset-1">
            @using (Html.BeginForm("EditProfile", "Home", FormMethod.Post, new { enctype = "multipart/form-data" })) //dosya upload da enctype ifadesi yazılır.
            {
                <div class="row">

                    <div class="col-md-3">
                        <!--left col-->
                        @Html.HiddenFor(x => x.ProfileImageFileName)
                        <img src="~/images/@Model.ProfileImageFileName" class="avatar img-circle img-thumbnail mt-3" alt="avatar" width="120" height="120">
                        <h6>Fotoğrafı güncelle</h6>
                        <input type="file" name="ProfileImage" id="ProfileImage" class="text-center center-block file-upload">
                        <i>Lütfen jpg,jpeg ya da png kullanınız.</i>


                    </div><!--/col-3-->
                    <div class="col-md-5">
                        @Html.ValidationSummary(false)
                        @Html.HiddenFor(x => x.Id)
                        <div class="form-group">
                            @Html.LabelFor(x => x.Name, new { @class = "control-label" }) <br />
                            @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(x => x.Surname, new { @class = "control-label" }) <br />
                            @Html.TextBoxFor(x => x.Surname, new { @class = "form-control" })
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(x => x.UserName, new { @class = "control-label" }) <br />
                            @Html.TextBoxFor(x => x.UserName, new { @class = "form-control" })
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(x => x.Password, new { @class = "control-label" }) <br />
                            @Html.TextBoxFor(x => x.Password, new { @class = "form-control" })
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(x => x.Email, new { @class = "control-label" }) <br />
                            @Html.TextBoxFor(x => x.Email, new { @class = "form-control" })
                        </div>
                        <div class="form-group">
                            <button type="submit" class="btn btn-success">Güncelle</button>
                            @Html.ActionLink("İptal", "ShowProfile", "Home", null, new { @class = "btn btn-danger" })
                        </div>

                    </div>
                </div>
            }
        </div>
    </div>
</div>

    <script>

        $(document).ready(function () {


            var readURL = function (input) {
                if (input.files && input.files[0]) {
                    var reader = new FileReader();

                    reader.onload = function (e) {
                        $('.avatar').attr('src', e.target.result);
                    }

                    reader.readAsDataURL(input.files[0]);
                }
            }


            $(".file-upload").on('change', function () {
                readURL(this);
            });
        });


    </script>

