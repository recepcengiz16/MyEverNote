@using MyEverNote.Entities.ValueObject
@model LoginViewModel

@{
    ViewBag.Title = "MyEverNote-Giriş Sayfası";
}
<link href="~/Content/Login.css" rel="stylesheet" />
<link href="//maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
<script src="//maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
<script src="//code.jquery.com/jquery-1.11.1.min.js"></script>


@using (Html.BeginForm())
{
    <div class="login-wrap mt-4 mb-4">
        <div class="login-html">
            <input id="tab-1" type="radio" name="tab" class="sign-in" checked><label for="tab-1" class="tab">Giriş</label>
            <input id="tab-2" type="radio" name="tab" class="for-pwd"><label for="tab-2" class="tab">Şifremi Unuttum?</label>
            <div class="login-form">
                <div class="sign-in-htm">
                    @Html.ValidationSummary()
                    @if (ViewBag.Setlink!=null)
                    {
                        <a href="@ViewBag.Setlink" class="btn btn-primary">Aktif Et</a>
                    }
                    <div class="group">
                        <label for="user" class="label">Kullanıcı Adı</label>
                        @Html.TextBoxFor(x => x.UserName, new { @class = "form-control",placeholder="Kullanıcı Adı giriniz" })
                    </div>
                    <div class="group">
                        <label for="pass" class="label">Şifre</label>
                        @Html.TextBoxFor(x => x.Password, new { @class = "form-control",placeholder="Şifre giriniz",type="password"})
                    </div>
                    <div class="group">
                        <button type="submit" class="btn btn-success">Giriş</button>
                    </div>
                    <div class="hr"></div>
                </div>
                <div class="for-pwd-htm">
                    <div class="group">
                        <label for="user" class="label">Email Adresi</label>
                        @Html.TextBox("sifrehatasi", null, new { @class="form-control",placeholder="E mail adresi giriniz"})
                    </div>
                    <div class="group">
                        <button type="submit" class="btn btn-danger">Şifreyi Sıfırla</button>
                    </div>
                    <div class="hr"></div>
                </div>
            </div>
        </div>
    </div>
}



